<UserControl x:Class="IikoPaymentPlugin.View.UserControls.ClientInfoCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IikoPaymentPlugin.View.UserControls"
             mc:Ignorable="d" 
             Background="White"
             Name="clientInfo"
             BorderThickness="0 0 0 1" BorderBrush="Black"
             d:DesignHeight="75" d:DesignWidth="400">
    <DockPanel LastChildFill="True" VerticalAlignment="Center"
                   Margin="15 0">
        <TextBlock Text="{Binding ElementName=clientInfo, Path=Header}" FontWeight="Bold" FontSize="15"/>
        <TextBlock Text="{Binding ElementName=clientInfo, Path=InfoText}" HorizontalAlignment="Right"
                       DockPanel.Dock="Right" FontSize="15"/>
    </DockPanel>
</UserControl>
